@model IEnumerable<Shoppica.UI.Models.CategoryVM>


@foreach (CategoryVM item in Model)
{
    <div class="grid_2">
        <h2>@item.CategoryName</h2>
        <ul class="s_list_1">
            @for (int i = 0; i < 4; i++)
            {
                <li><a href="/product/getproducts/@item.InverseTop.ToList()[i].Id">@item.InverseTop.ToList()[i].CategoryName</a></li>
            }
        </ul>
    </div>
}